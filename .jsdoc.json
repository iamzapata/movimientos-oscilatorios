{
  "tags": {
    "allowUnknownTags": true,
    "dictionaries": ["jsdoc"]
  },
  "source": {
    "include": ["componentes", "lib", "constantes"],
    "includePattern": ".js(x)?$",
    "excludePattern": "(node_modules/|docs)"
  },
  "plugins": ["plugins/markdown"],
  "opts": {
    "destination": "public/docs",
    "encoding": "utf8",
    "recurse": true,
    "template": "jsdoc-template"
  },
  "templates": {
    "referenceTitle": "Movimientos Ondulatorios",
    "disableSort": false,
    "collapse": true,
    "resources": {
      "aplicación": "https://fisica.app/",
      "repositorio": "https://github.com/iamzapata/movimientos-oscilatorios"
    },
    "title": "Documentación"
  }
}
